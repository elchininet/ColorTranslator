{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "esnext",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "baseUrl": "./src",
    "paths": {
      "@types": ["@types"],
      "#helpers": ["helpers"],
      "#constants": ["constants"],
      "#color/*": ["color/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
